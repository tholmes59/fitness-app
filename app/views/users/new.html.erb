<div class="container signup">
<% if @user.errors.any? %>
    <p> Sign Up Failed: </p>
        <% @user.errors.full_messages.each do |msg| %>
          <p style="color:red;"><%= msg %></p>
        <% end %>
<% end %>
<h1>Please Create an Account by Signing Up Below</h1><br>

<%= form_for(@user) do |f| %>

  <%= f.label :username %><br>
  <%= f.text_field :username %><br><br>

  <%= f.label :email %><br>
  <%= f.email_field :email %><br><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br>

  <%= f.submit "Sign Up", class: "btn btn-primary" %><br><br>

<% end %>

<p>Already have an account with us?</p>

<p>Please login below</p><br>

<div><%= link_to "Login", login_path, class: "btn btn-primary" %></div><br>

<div>- or -</div><br>

<div><%= link_to 'Login with Facebook', '/auth/facebook', class: "btn btn-primary" %></div>

 
</div>