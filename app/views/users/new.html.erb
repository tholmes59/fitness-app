<h1>Create User</h1>

<%= form_for(@user) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign In" %>

<% end %>

 <% if @user.errors.any? %>
    <p> Sign Up Failed: </p>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
<% end %>