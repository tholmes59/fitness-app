<div class='container login'>
<% if flash[:notice] %>
<%= flash[:notice] %><br><br>
<% end %>




<h1>Welcome Back!</h1>
<h3>Please Login Below</h3><br>
<%= form_for @user, url: '/login' do |f| %>

  <%= f.label :username %><br>
  <%= f.text_field :username %><br><br/>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br/>

  <%= f.submit "Log In", class: "btn btn-primary" %><br><br>

<% end %>

<p>Don't have an account with us yet?</p>
<p>Please create an account!</p><br>
<%= link_to "Sign Up!", new_user_path, class: "btn btn-primary" %>
</div>

