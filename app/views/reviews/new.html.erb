<div class='container reviews-new'>
<h1>Add a Review for <%= @workout.workout_name %></h1><br><br>

<%= form_for [@workout, @review] do |f| %>

<% if @review.errors.any? %>
<h2>The review could not be created:</h2>
        <% @review.errors.full_messages.each do |message| %>
        <p style="color:red;"><%= message %></p>
        <% end %>
<% end %>

<div>
    <%= f.label :rating, "Rating from 1-5"%><br>
    <%= f.number_field :rating, min: 0, max: 5%>
</div><br>
<div>
    <%= f.label :content, "Review:" %><br>
    <%= f.text_area :content%>
</div>
<br>

<%= f.submit class: "btn btn-primary" %><br><br>
<% end %>

<%=link_to "Exit Review", workout_path(@workout.id), class: "btn btn-primary" %><br><br>
</div>