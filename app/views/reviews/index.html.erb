<h1>All Reviews for <%= link_to @workout.workout_name, workout_path(@workout) %> </h1>
<h3><%= review_count_label(@reviews) %></h3>


  <% @reviews.order_by_rating.each do |review| %>
      Rating: <%= review.rating %><br>
      Review: <%= review.content %><br>
      by: <%= link_to review.user.username, user_path(review.user) %> on <%= review.date %>
   <br><br>
  <% end %>


<%= link_to "Add Review", new_workout_review_path %>
